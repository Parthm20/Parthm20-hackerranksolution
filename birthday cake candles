#include<stdio.h>
int main()
{
    int n,i,countmax=0;
    scanf("%d",&n);
    int a[100000];
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int max=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]>max)
        {
            max=a[i];
        }
        
    }
    for(i=0;i<n;i++)
    {
    if(a[i]==max)
        {
            countmax++;
        }
    }
    printf("%d",countmax);
}
